<dsx>
	<scene root="root" axis_length="5.0"/>
	
	<views default="cam0">
		<perspective id="cam0" near="0.1" far="500" angle="45">
            <from x="6" y="3" z="6" />
            <to x="0" y="0" z="0" />
        </perspective>
	</views>
	
	<illumination doublesided="0" local="0">
		<ambient r="0" g="0" b="0" a="1.0"/> 
		<background r="0" g="0" b="0" a="1.0"/>
	</illumination>
	
	<lights>
        <spot id="spot1" enabled="1" angle="20" exponent="0">
            <target x="0" y="0" z="0" />
            <location x="1" y="1" z="2" />
            <ambient r="0" g="0" b="0" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </spot>
	</lights>
	
	<textures>
		<texture id="board" file="../resources/Yavalath.png" length_s="4" length_t="4" />
		<texture id="peca" file="../resources/peca.png" length_s="1" length_t="1" />
		<texture id="ceu" file="../resources/ceu.jpg" length_s="4" length_t="4" />
		<texture id="areia" file="../resources/piramide.png" length_s="1" length_t="1" />
	</textures>
	
	<materials>
		<material id="white" >
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
            <shininess value="10.0" />
        </material>
	</materials>
	
	<transformations>
		<transformation id="trans1">
           <rotate axis="x" angle="90.0" />
        </transformation>
	</transformations>
	
	<primitives>
		<!-- Tests -->
		<primitive id="testChessboard">
			<chessboard du="8" dv="8" textureref="peca" su="1" sv="1">
                  <c1 r="1" g="1" b="1" a="1" />
                  <c2 r="0" g="0" b="0" a="1" />
                  <cs r="1" g="0" b="0" a="1" />
            </chessboard>

		</primitive>
	</primitives>
	
	<components>
		<component id="root">
            <transformation>
            </transformation>
			
            <materials>
                <material id="white" />
            </materials>
			
            <texture id="board" />
            <children>
				<primitiveref id="testChessboard" />
            </children>
			
        </component>
	</components>
</dsx>